@model IEnumerable<ApartmentsManager.Pet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pets</h2>

<button class="btn" style="margin-bottom:20px">
    @Html.ActionLink("Create New", "Create")
</button>
<button class="btn" style="margin-bottom:20px">
    @Html.ActionLink("People", "../Person/Index")
</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.FirstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDPet }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDPet }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDPet })
            </td>
        </tr>
    }

</table>
